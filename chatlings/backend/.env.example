# Chatlings Backend Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatlings
DB_USER=postgres
DB_PASSWORD=!1Swagger!1

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Social Media API Keys (for encounter detection)
YOUTUBE_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
TWITTER_BEARER_TOKEN=

# Kaiber AI (for animation generation)
KAIBER_API_KEY=
KAIBER_API_ENDPOINT=

# Azure Storage (for animation storage)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=chatlings-animations

# Creature Rotation
CREATURE_ROTATION_INTERVAL=86400
