# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatlings
DB_USER=postgres
DB_PASSWORD=your_password_here

# Session Configuration
SESSION_SECRET=your_random_secret_key_here

# Google OAuth (for Login AND YouTube Integration)
# YouTube integration uses the same OAuth client with incremental authorization
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# YouTube OAuth Redirect URI (uses same credentials as Google login)
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback

# YouTube Data API Key (for fetching public video metadata)
# Get this from Google Cloud Console (YouTube Data API v3)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Security
# Optional: Comma-separated list of IPs allowed to access admin panel
# Leave empty to allow from any IP (still requires admin account)
# Example: ADMIN_ALLOWED_IPS=192.168.1.100,203.0.113.1,localhost
ADMIN_ALLOWED_IPS=

# Azure Blob Storage (for animations and artwork)
# Get connection string from: Azure Portal → Storage Account → Access keys
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_CONTAINER_ANIMATIONS=animations
